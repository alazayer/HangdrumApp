############# BUTTON TEMPLATES ###############

<BrowseButton>:
    size: [50, 100]

<BrowseWindow>:
    id: browsewindow
    browsewindow: browsewindow
    label: label

    orientation: 'vertical'

    FileChooserListView:
        id: filechooser
        path: "/Users/3ala2/PycharmProjects/Hangdrum/userAccessFolder"
        on_selection: browsewindow.selected(filechooser.selection)

    Label:
        id: label
        text: ''
        color: 0,0,0,1
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

    Button:
        id: popup_btn_cancel
        text: 'Load'
        size_hint_y: .1
        on_release: root.dismiss_popup()

<NoteButton>:
    size_hint: [None, None]
    size: [160, 160]
    background_normal: 'Imgs/blueButtonPressed.png'
    background_down: 'Imgs/redButtonPressed.png'

<TimeBar>:
    min: 0
    max: 100
    value: 0

<PlayButton>:
    size: self.size
    size_hint: [None, None]
    size: [150, 150]
    background_normal: 'Imgs/playButton.png'
    background_down: 'Imgs/pauseButton.png'

<RecordButton>:
    size: self.size
    size_hint: [None, None]
    size: [150, 150]
    background_normal: 'Imgs/recordButton.png'
    background_down: 'Imgs/pauseButton.png'

<LoopButton>:
    size: self.size
    size_hint: [None, None]
    size: [150, 150]
    background_normal: 'Imgs/loopButton.png'
    background_down: 'Imgs/loopButtonPressed.png'

<BackButton>:
    # color: 1,1,1,0.5
    # background_color: 0.1, 0.1, 0.1, 1
    size_hint: [None, None]
    size: [100, 100]
    background_normal: 'Imgs/backButton.png'
    background_down: 'Imgs/backButton.png'




############# SCREEN MANAGER LAYOUT ###############
<MainLayout>
    id: mainlayout

    Manager:
        id: screen_manager

        # Links between .py file and .kv file
        screen_one: screen_one
        screen_two: screen_two
        screen_three: screen_three

        ScreenOne:
            id: screen_one
            name: 'screen1'
            manager: screen_manager

        ScreenTwo:
            id: screen_two
            name: 'screen2'
            manager: screen_manager

        ScreenThree:
            id: screen_three
            name: 'screen3'
            manager: screen_manager


############# SCREEN 1 LAYOUT ############
<ScreenOne>
    filename: filename
    mainScale: mainScale
    secondScale: secondScale
    secondScaleCheckBox: secondScaleCheckBox
    stepBasedToggle: stepBasedToggle
    scaleBasedToggle: scaleBasedToggle
    reverseScaleCheckBox: reverseScaleCheckBox
    browseFile: browseFile
    browseMainScale: browseMainScale
    browseSecondScale: browseSecondScale

    canvas:
        Color:
            rgb: [0, 0, 0]
        Rectangle:
            pos: 0,0
            size: root.width, root.height

    GridLayout:
        rows: 2
        size: root.width - 400, root.height - 400
        size_hint: [None, None]
        pos: 200, 200

        canvas:
            Color:
                rgb: [0, 0, 0]
            Rectangle:
                pos: self.pos
                size: self.size

        GridLayout:
            rows: 4
            cols: 2
            # size: root.width - 200, root.height - 200
            # size_hint: [None, None]

            canvas:
                Color:
                    rgb: [.1, .1, .384]
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "File Path:"

            GridLayout:

                cols:2

                TextInput:
                    id: filename
                    text: ''
                    path: ''

                BrowseButton:
                    size_hint_x: 0.1
                    text: 'V'
                    id: browseFile
                    title: 'Browse File...'


            Label:
                text: "Main Scale:"
                halign: 'center'

            GridLayout:

                cols:2

                TextInput:
                    id: mainScale
                    text: ''
                    path: ''

                BrowseButton:
                    size_hint_x: 0.1
                    text: 'V'
                    id: browseMainScale
                    title: 'Browse Main Scale...'

            GridLayout:

                cols:2

                canvas.before:
                    Color:
                        rgb: [0.3, 0.3, .6]
                    Rectangle:
                        pos: self.pos
                        size: self.size

                CheckBox:
                    id: secondScaleCheckBox
                    size_hint_x: 0.4

                Label:
                    text: 'Convert to 2nd Scale'
                    halign: 'left'


            GridLayout:

                cols: 2

                TextInput:
                    id: secondScale
                    text: ''
                    path: ''
                    background_disabled_normal: ""
                    disabled: not secondScaleCheckBox.active

                BrowseButton:
                    size_hint_x: 0.1
                    text: 'V'
                    id: browseSecondScale
                    title: 'Browse Second Scale...'

            # canvas:
             #   Color:
             #       rgb: [0.3, 0.3, .6, 1]
             #   Rectangle:
             #       pos: self.pos
             #       size: self.size

            ToggleButton:
                text: 'Based on Steps'
                group: 'scaleConversion'
                id: stepBasedToggle
                background_color: 0.3, 0.3, .6, 1
                disabled: not secondScaleCheckBox.active
                state: 'down'

            ToggleButton:
                background_color: 0.3, 0.3, .6, 1
                text: 'Based on Scale'
                group: 'scaleConversion'
                id: scaleBasedToggle
                disabled: not secondScaleCheckBox.active

        GridLayout:
            id: loadingBar
            rows: 2
            size: root.width - 400, root.height - 1000
            pos: 200, 200
            size_hint: [None, None]

            ToggleButton:
                text: 'Reverse Displayed Scale'
                background_color: 2, 1, 0, 1
                id: reverseScaleCheckBox
                size_hint_x: 0.4

            GridLayout:

                cols: 2

                Button:
                    id: loadButton
                    text: "Load"
                    background_color: 0.2, 0.8, 0.4, 1
                    on_release: root.manager.current = 'screen2'

                Button:
                    id: recordButton
                    text: "Record"
                    background_color: 0.8, 0.2, 0, 1
                    on_release: root.manager.current = 'screen3'

############# SCREEN 2 LAYOUT ############
<ScreenTwo>

    startTime: startTime
    endTime: endTime
    tempo: tempo
    timeBar: timeBar
    playbutton: playbutton
    noteButtons: noteButtons
    backbutton: backbutton
    loopbutton: loopbutton

    canvas:
        Color:
            rgb: [.5, .5, .384]
        Rectangle:
            source: 'Imgs/Hangdrum_Pic.png'
            pos: 250,300
            size: root.width-500, root.height-400

    canvas:
        StencilPush

        StencilUse

        StencilUnUse

        StencilPop
        Color:
            rgb: [1, 0, 0]
        Ellipse:
            pos: 210,270
            size: root.width-400, root.height-300

        Color:
            rgb: [0, 0, 0]
        Ellipse:
            pos: 220,280
            size: root.width-420, root.height-320

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        BackButton:
            id: backbutton

################# ALL NOTES #################
    # FloatLayout where notes will be stored
    FloatLayout:

        id: noteButtons

        NoteButton:
            id: slap
            text: 'Slap'
            color: 0,0,0,1
            size: [150, 150]
            pos_hint: {"x":0.33, "y":0.43}
            background_normal: 'Imgs/slapButton.png'
            background_down: 'Imgs/slapButtonPressed.png'

######### BOTTOM BAR IN SCREEN 2 #########

    PlayButton:
        id: playbutton

    LoopButton:
        id: loopbutton
        size: 100, 100
        pos_hint: {"x":0.1, "y":0}

    GridLayout:

        size: root.width, root.height / 10
        size_hint: [None, None]
        pos_hint: {"x":0, "y":0.12}

        cols: 3

        Label:
            text: 'Time Bar'

        TimeBar:
            id: timeBar

        Label:
            text: '{}'.format(round(timeBar.value,1))

    GridLayout:

        size: root.width/1.3, root.height / 18
        size_hint: [None, None]
        pos_hint: {"x":0.15, "y":0.02}

        cols: 6

        Label:
            size: 100,50
            text: "Tempo:"

        TextInput:
            id: tempo
            text: '120'
            size: 10,5

        Label:
            text: "Start:"

        TextInput:
            id: startTime
            text: '0'

        Label:
            text: "End:"
            halign: 'center'

        TextInput:
            id: endTime

########### SCREEN 3 ##########
<ScreenThree>

    noteButtonsRecord: noteButtonsRecord
    recordbutton: recordbutton
    tempoRec: tempoRec
    fileToSave: fileToSave
    tabOutput: tabOutput


    Label:
        id: tabOutput
        pos_hint: {"x":0, "y":-0.35}
        text: ''

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        BackButton:
            id: backbuttonS3

    RecordButton:
        id: recordbutton


    GridLayout:

        size: root.width/1.2, 50
        size_hint: [None, None]
        pos_hint: {"x":0.1, "y":0.02}

        cols: 4

        Label:
            size: 200,50
            size_hint: [None, None]
            text: "Filename:"

        TextInput:
            id: fileToSave
            text: 'newRecordedTab'
            size: 10,5

        Label:
            size: 150,50
            size_hint: [None, None]
            text: "Tempo:"

        TextInput:
            id: tempoRec
            size: 200,50
            size_hint: [None, None]
            text: '120'

    ################# ALL NOTES #################
    # FloatLayout where notes will be stored
    FloatLayout:

        id: noteButtonsRecord

        NoteButton:
            id: slapRecord
            text: 'S'
            color: 0,0,0,1
            size: [150, 150]
            pos_hint: {"x":0.33, "y":0.43}
            background_normal: 'Imgs/slapButton.png'
            background_down: 'Imgs/slapButtonPressed.png'

        NoteButton:
            id: blankRecord
            text: '-'
            color: 0,0,0,1
            size: [150, 150]
            pos_hint: {"x":0.66, "y":0.43}
            background_normal: 'Imgs/slapButton.png'
            background_down: 'Imgs/slapButtonPressed.png'


